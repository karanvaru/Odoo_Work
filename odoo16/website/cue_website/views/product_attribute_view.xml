<?xml version="1.0"?>
<odoo>

    <record id="product_attribute_view_form_inherit_icon" model="ir.ui.view">
        <field name="name">product.attribute.form.inherit</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_fields']" position="after">
            	<group name="icons">
            		<group>
						<field name="icon" widget="image" class="oe_avatar"/>
            		</group>
	            </group>
            </xpath>
        </field>
    </record>

</odoo>