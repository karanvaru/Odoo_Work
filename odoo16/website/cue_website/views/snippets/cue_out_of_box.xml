<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="cue_out_of_box" name="CUE OUT OF BOX">
    <section class="s_text_image cue_out_of_box pt32 pb32 o_colored_level" data-snippet="s_text_image" data-name="Text - Image" style="background-image: none;">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 pt16 pb16 o_colored_level image_box">
          	<div class="__marque_box"/>
          </div>
          <div class="col-lg-6 pt16 pb16 o_colored_level">
            <h2 class="text-center" style="margin-bottom: 62px;">
                <font style="font-weight: 600; color: rgb(225, 225, 240);">
                    <span style="font-size: 36px;" class="o_default_snippet_text">Out-of-the-Box</span>
                </font>
                <font style="font-weight: 600; color: rgb(255, 200, 75);">
                    <span style="font-size: 36px;" class="o_default_snippet_text">Support</span>
              </font>
            </h2>
            <div class="row m-auto justify-content-center">
            	<div class="col-5">
            		<div class="border-box">
            			<span style="font-size: 30px;font-weight: 600;">500+</span>
            			<span style="font-size: 30px;font-weight: 600;">Brands</span>
            		</div>
            	</div>
            	<div class="col-5">
            		<div class="border-box">
            			<span style="font-size: 30px;font-weight: 600;">20,000+</span>
            			<span style="font-size: 30px;font-weight: 600;">Devices</span>
            		</div>
            	</div>
            </div>
          </div>
        </div>
      </div>
    </section>
</template>

<record id="cue_website.cue_out_of_box_000_scss" model="ir.asset">
    <field name="name">Cue 000 SCSS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">cue_website/static/src/snippets/cue_out_of_box/000.scss</field>
</record>

<record id="cue_website.cue_out_of_box_000_js" model="ir.asset">
    <field name="name">Cue 000 js</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">cue_website/static/src/snippets/cue_out_of_box/000.js</field>
</record>

</odoo>