    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//we-select[@data-variable='footer-template']" position="inside">
            <we-button title="Cue Footer"
                       data-customize-website-views="cue_website.footer_cue"
                       data-customize-website-variable="Cue-Footer"
                       data-img="/cue_website/static/src/img/footer_cue.svg"/>
        </xpath>
        <xpath expr="//we-select[@data-variable='header-template']" position="inside">
            <we-button title="Cue Header"
                       data-name="Cue-Header"
                       data-customize-website-views="cue_website.header_cue"
                       data-customize-website-variable="'Cue-Header'"
                       data-img="/website/static/src/img/snippets_options/header_cue.svg"/>
        </xpath>

        <xpath expr="//we-select[@data-name='header_alignment_opt']/we-button[1]" position="attributes">
            <attribute name="data-customize-website-views" add="cue_website.header_cue_align_center" separator=","/>
        </xpath>
        <xpath expr="//we-select[@data-name='header_alignment_opt']/we-button[last()]" position="attributes">
            <attribute name="data-customize-website-views" add="cue_website.header_cue_align_right" separator=","/>
        </xpath>
    </template>
</odoo>