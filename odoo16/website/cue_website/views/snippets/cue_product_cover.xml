    <template id="cue_product_cover" name="Product Cover">
        <section class="s_cover cue_product_cover parallax s_parallax_is_fixed" data-scroll-background-ratio="1">
            <span class="s_parallax_bg oe_img_bg"/>
            <div class="boder_wraper">
                <div class="o_we_bg_filter"/>
                <div class="s_allow_columns container">
                    <h1 class="cover_fonts mb0" style="margin-top: 25px;">
                        <font style="color: rgb(255, 200, 75);">UNLOCK THE FULL POTENTIAL</font>
                    </h1>
                    <h1 class="cover_fonts" style="margin-bottom: 50px;">
                        <font style="color: rgb(225, 225, 240);">OF YOUR SMART HOME</font>
                    </h1>
                    <p class="cover_content_fonts">Functionality that every Home needs isn’t the same; so isn’t the Technology.
                    </p>
                    <p class="cover_content_fonts">Explore Cue Bridge line-up designed with every home and technology in mind.</p>
                </div>
            </div>
        </section>
    </template>

    <record id="cue_website.cue_cover_smart_000_scss" model="ir.asset">
        <field name="name">Cue 000 SCSS</field>
        <field name="bundle">web.assets_frontend</field>
