<?xml version="1.0" encoding="UTF-8"?>
<templates>

<t t-name="marque_box">
   <div class="marquee-wrapper">
	<div class="container">
		<div class="marquee-block" t-attf-style="--block-width:185px;width:calc(var(--block-width) * ({{widget.brand_ids[0].length}}))">
			<div class="marquee-inner to-left">
				<span>
                    <t t-foreach="widget.brand_ids[0]" t-as="brand_id">
                        <div class="marquee-item">
							<a t-att-href="widget.brands[brand_id]" target="_blank">
								<img class="img_class" t-attf-src="/web/image/product.brand/{{brand_id}}/logo" style="background-color:white;"/>
							</a>
                        </div>
                    </t>
				</span>
				<span>
                    <t t-foreach="widget.brand_ids[0]" t-as="brand_id">
                        <div class="marquee-item">
							<a t-att-href="widget.brands[brand_id]" target="_blank">
                            	<img class="img_class" t-attf-src="/web/image/product.brand/{{brand_id}}/logo" />
							</a>
                        </div>
                    </t>
				</span>
			</div>
		</div>

        <div class="marquee-block" t-attf-style="--block-width:185px;width:calc(var(--block-width) * ({{widget.brand_ids[1].length}}))">
			<div class="marquee-inner to-right">
				<span>
                    <t t-foreach="widget.brand_ids[1]" t-as="brand_id">
                        <div class="marquee-item">
							<a t-att-href="widget.brands[brand_id]" target="_blank">
                            	<img class="img_class" t-attf-src="/web/image/product.brand/{{brand_id}}/logo" style="background-color:white;"/>
							</a>
                        </div>
                    </t>
				</span>
				<span>
                    <t t-foreach="widget.brand_ids[1]" t-as="brand_id">
                        <div class="marquee-item">
							<a t-att-href="widget.brands[brand_id]" target="_blank">
                            	<img class="img_class" t-attf-src="/web/image/product.brand/{{brand_id}}/logo" />
							</a>
                        </div>
                    </t>
				</span>
			</div>
		</div>

        <div class="marquee-block" t-attf-style="--block-width:185px;width:calc(var(--block-width) * ({{widget.brand_ids[2].length}}))">
			<div class="marquee-inner to-left">
				<span>
                    <t t-foreach="widget.brand_ids[2]" t-as="brand_id">
                        <div class="marquee-item">
							<a t-att-href="widget.brands[brand_id]" target="_blank">
                            	<img class="img_class" t-attf-src="/web/image/product.brand/{{brand_id}}/logo" style="background-color:white;"/>
							</a>
                        </div>
                    </t>
				</span>
				<span>
                    <t t-foreach="widget.brand_ids[2]" t-as="brand_id">
                        <div class="marquee-item">
							<a t-att-href="widget.brands[brand_id]" target="_blank">
                            	<img class="img_class" t-attf-src="/web/image/product.brand/{{brand_id}}/logo" />
							</a>
                        </div>
                    </t>
				</span>
			</div>
		</div>

	
	</div>
    </div>
</t>
</templates>