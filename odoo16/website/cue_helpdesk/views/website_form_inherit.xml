<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="ticket_form_inherit_view" inherit_id="odoo_website_helpdesk.ticket_form">
        <xpath expr="//section[hasclass('cue_contact_form')]" position="replace">

            <section class="s_website_form cue_helpdesk_form" data-vcss="001"
                     data-snippet="s_website_form">
                <div class="container">

                    <form id="Ticket_form"
                          action="/website/form/"
                          method="post"
                          enctype="multipart/form-data"
                          class="o_mark_required"
                          data-mark="*"
                          data-model_name="help.ticket"
                          data-success-mode="redirect"
                          data-success-page="/helpdesk-thank-you"
                          data-pre-fill="true">
                        <div class="s_website_form_rows row s_col_no_bgcolor">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required" data-type="char"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact1">Name
                                        <span>*</span>
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <input id="contact1"
                                           type="text"
                                           class="form-control s_website_form_input"
                                           required="True"
                                           data-fill-with="name"
                                           placeholder="Enter Your Name"/>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required" data-type="char"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact2">Phone
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <input id="contact2"
                                           type="tel"
                                           class="form-control s_website_form_input"
                                           name="phone"
                                           data-fill-with="phone"
                                           placeholder="Enter Your Phone Name"
                                           pattern="[0-9]{10}"
                                    />
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="email"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact3">Email
                                        <span>*</span>
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <input id="contact3"
                                           type="email"
                                           required="True"
                                           class="form-control s_website_form_input"
                                           data-fill-with="email"
                                           placeholder="Enter Your Email Id"
                                           pattern="[^@\s]+@[^@\s]+\.[^@\s]+"/>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="char"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact4">Company
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <input id="contact4"
                                           type="text"
                                           class="form-control s_website_form_input"
                                           name="company"
                                           placeholder="Enter Your Company Name"/>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="char"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact51">Category
                                        <span>*</span>
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <select name="category" id="contact51"
                                            t-attf-class="form-control s_website_form_input"
                                            required="True">
                                        <option value="0" disabled="" selected="" data-calc="0">Select Category...
                                        </option>
                                        <t t-foreach="categories or []"
                                           t-as="c">
                                            <option t-att-value="c.id">
                                                <t t-esc="c.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="char"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact53">Ticket type
                                        <span>*</span>
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <select name="ticket_type" id="contact53"
                                            t-attf-class="form-control s_website_form_input"
                                            required="True">
                                    </select>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="char"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact5">Subject
                                        <span class="s_website_form_mark">*</span>

                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <input id="contact5"
                                           type="text"
                                           class="form-control s_website_form_input"
                                           name="subject"
                                           required="required"
                                           placeholder="Mention your Issue here"/>
                                </div>
                            </div>


                            <div class="row">
                                <div id="ticket_disc" class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="text"
                                     data-name="Field">
                                    <label class="s_website_form_label" for="contact6">Description
                                    </label>
                                </div>
                                <div class="col-lg-9">
                                    <textarea id="contact6"
                                              class="form-control s_website_form_input"
                                              name="description"
                                              required="required"
                                              placeholder="Issue description in detail"/>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-3 s_website_form_field
                                 s_website_form_custom s_website_form_required"
                                     data-type="binary"
                                     data-name="Field">
                                    <label for="contact6">Attachment
                                    </label>
                                </div>


                                <div class="row col-lg-9">
                                    <div class="col col-lg-4 ">
                                        <label class="col-sm __attechment">
                                            <input type="file"
                                                   accept="application/pdf"
                                                   name="ticket_attachment"
                                                   multiple="true"/>
                                            <div class="__box">
                                                <i class="fa fa-cloud-upload"></i>
                                                <span class="__title">Upload File</span>
                                            </div>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-lg-3 mb-0 pdf_attach" style="font-size: 14px;padding-top: 17px;">
                                    <p>PDF Only. Upto 5 MB size</p>
                                </div>

                            </div>
