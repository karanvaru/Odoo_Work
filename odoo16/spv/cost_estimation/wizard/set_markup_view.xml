<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="set_markup_value_view" model="ir.ui.view">
		<field name="name">set.markup.value.view</field>
		<field name="model">set.markup.value</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="markup_perc"/>
					</group>
					<footer>
						<button name="action_set_markup" type="object" string="Apply" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
					</footer>
				</sheet>	
			</form>
		</field>
	</record>
</odoo>