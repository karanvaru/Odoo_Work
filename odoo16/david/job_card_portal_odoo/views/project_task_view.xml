<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_task_form2_inherit_job" model="ir.ui.view">
        <field name="name">Project Task From Inherit Job Card</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="signature" string="Signature">
                    <group>
                        <field name="custom_job_sign_by"/>
                        <field name="custom_job_sign_date"/>
                        <field name="custom_signature_job_card" widget="signature"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>