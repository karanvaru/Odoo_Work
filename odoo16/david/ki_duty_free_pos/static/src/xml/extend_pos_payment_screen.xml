<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
         <xpath expr="//div[hasclass('payment-controls')]" position="inside">
             <div>

                 <div id="duty_free_pos" class="button pos_rpeorts_custom" t-att-class="{ highlight: currentOrder.is_to_duty_free() }" t-on-click="toggleIsTopos">

                    <div class="pay-circle">
                     <i class="fa fa-book" role="img" aria-label="Pay" title="Pay"/>
                                <span>Duty Free Details</span>
                    </div>

                 </div>
             </div>
         </xpath>
    </t>
</templates>


