<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="ki_report_jobcard" inherit_id="job_card.report_jobcard">
<!--            <xpath expr="//div[hasclass('page')]" position="replace">-->
            <xpath expr="//t[@t-foreach='docs']" position="replace">
                <t t-foreach="docs.sudo()" t-as="o">
                    <t t-call="web.external_layout">
                        <t t-call="web.html_container">
                        <div class="page">
                            <style>
                                .borderless td, .borderless th {
                                border: none;
                                }
                            </style>
                            <h2 class="text-center">
                                Job Card
                            </h2>
                            <h2 class="text-center">
<!--                                <span t-field="o.name"/>-->
<!--                                - -->
                                <span t-field="o.number"/>
                                -
                                <span t-field="o.stage_id"/>
                            </h2>
                            <table class="table table-striped borderless mt-5">
                                <thead>
                                    <tr>
                                        <td>
                                            <b>Customer:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.partner_id"/>
                                        </td>
                                        <td>
                                            <b>Assigned Date:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.date_assign" t-options='{"widget": "datetime","format": "MMMM dd, yyyy hh:mm:ss"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Project:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.project_id"/>
                                        </td>
                                        <td>
                                            <b>Ending Date:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.date_end" t-options='{"widget": "datetime","format": "MMMM dd, yyyy hh:mm:ss"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Assigned to:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.user_ids"/>
                                        </td>
                                        <td>
                                            <b>Analytic Account:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.analytic_account_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Quality Checklist:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.quality_checklist_id"/>
                                        </td>
                                        <td>
                                            <b>Workshop Staff:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.workshop_staff_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Deadline:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.date_deadline" t-options='{"widget": "date","format": "MMMM dd, yyyy"}'/>
                                        </td>
                                        <td>
                                            <b>Tags:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.tag_ids" widget="many2many_tags"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Email:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.email_from"/>
                                        </td>
                                        <td>
                                            <b>Company:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.company_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Company:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.company_id"/>
                                        </td>
                                        <td>
                                            <b>Currency:</b>
                                        </td>
                                        <td>
                                            <span t-field="o.custom_currency_id"/>
                                        </td>
                                    </tr>
                                </thead>
                            </table>

                            <p style="page-break-before:always;"> </p>
                        <p><h3>Vehicle Details</h3></p>
                        <table class="table table-bordered mt-5" style="width: 100%">
        <!--                    <thead>-->
                                <tr>
                                    <th colspan="4" style="font-size:1.17em;"><b>Vehicle Basic Info </b></th>
                                </tr>

                                <tr>
                                    <td style="width: 25%"><b>Make:</b></td>
                                    <td style="width: 25%"><span t-field="o.brand"/></td>
                                    <td style="width: 25%"><b>Registration Number:</b></td>
                                    <td style="width: 25%"><span t-field="o.register_no"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Model:</b></td>
                                    <td style="width: 25%"><span t-field="o.model_name"/></td>
                                    <td style="width: 25%"><b>VIN:</b></td>
                                    <td style="width: 25%"><span t-field="o.vin"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Type:</b></td>
                                    <td style="width: 25%">
                                        <span t-field="o.type_id"/>
                                    </td>
                                    <td style="width: 25%"><b>Engine:</b></td>
                                    <td style="width: 25%"><span t-field="o.engine"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Fuel Type:</b></td>
                                    <td style="width: 25%"><span t-field="o.fuel_type"/></td>
                                    <td style="width: 25%"><b>Model year:</b></td>
                                    <td style="width: 25%"><span t-field="o.year"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Color:</b></td>
                                    <td style="width: 25%"><span t-field="o.vehicle_color"/></td>
                                    <td style="width: 25%"><b>Id Number:</b></td>
                                    <td style="width: 25%"><span t-field="o.id_number"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Serial Number:</b></td>
                                    <td style="width: 25%"><span t-field="o.serial_number"/></td>
                                    <td style="width: 25%"></td>
                                    <td style="width: 25%"></td>
                                </tr>
                                <tr>
                                    <th colspan="4" style="font-size:1.17em;"><b>Extra Info</b></th>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Hour(s):</b></td>
                                    <td style="width: 25%"><span t-field="o.hours" t-options='{"widget":"float_time"}'/></td>
                                    <td style="width: 25%"><b>Last Service Date:</b></td>
                                    <td style="width: 25%"><span t-field="o.last_service_date" t-options='{"widget": "date","format": "MMMM dd, yyyy"}'/></td>
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Odometer Reading:</b></td>
                                    <td style="width: 25%"><span t-field="o.odometer"/></td>
                                    <td style="width: 25%"><b>Repair Category:</b></td>
                                    <td style="width: 25%"><span t-field="o.repair_category"/></td>
<!--                                    <td style="width: 25%"><b>Payment Type:</b></td>-->
<!--                                    <td style="width: 25%"><span t-field="o.pay_type"/></td>-->
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Fuel Level:</b></td>
                                    <td style="width: 25%"><span t-field="o.fuel_level"/></td>
                                    <td style="width: 25%"><b>Payment Type:</b></td>
                                    <td style="width: 25%"><span t-field="o.pay_type"/></td>
<!--                                    <td style="width: 25%"><b>Is Insurance Claim:</b></td>-->
<!--                                    <td style="width: 25%"><span t-field="o.is_insurance"/></td>-->
                                </tr>
                                <tr>
                                    <td style="width: 25%"><b>Average KM/Day:</b></td>
                                    <td style="width: 25%"><span t-field="o.average_km"/></td>
                                    <td style="width: 25%"><b>Is Insurance Claim:</b></td>
                                    <td style="width: 25%"><span t-field="o.is_insurance"/></td>
                                </tr>
                                <tr>
                                    <th colspan="4" style="font-size:1.17em;"><b>Vehicle Servicing Details</b></th>
                                </tr>
                                <tr>
                                    <td colspan="4"><b>Service Details : </b>
                                    <span style="margin-left:4px;" t-field="o.detail"/></td>
                                </tr>


        <!--                    </thead>-->
                        </table>
                        <table  class="table table-bordered mt-5" id="vehicle_details_image">
                            <tr>
                                <th colspan="3" style="font-size:1.17em;">
                                    <b>Images</b>
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <span t-if="o.image1">
                                        <img style="width:230px;height:200px;"
                                             t-attf-src="data:image/gif;base64, #{o.image1}"/>
                                    </span>
                                </td>
                                <td t-if="o.image2">
                                    <span>
                                        <img style="width:230px;height:200px;"
                                             t-attf-src="data:image/gif;base64, #{o.image2}"/>
                                    </span>
                                </td>
                                <td t-if="o.image3">
                                    <span>
                                        <img style="width:230px;height:200px;"
                                             t-attf-src="data:image/gif;base64, #{o.image3}"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td t-if="o.image4">
                                    <span>
                                        <img style="width:230px;height:200px;"
                                             t-attf-src="data:image/gif;base64, #{o.image4}"/>
                                    </span>
                                </td>
                                <td t-if="o.image5">
                                    <span>
                                        <img style="width:230px;height:200px;"
                                             t-attf-src="data:image/gif;base64, #{o.image5}"/>
                                    </span>
                                </td>
                            </tr>
                        </table>


                            <p style="page-break-before:always;"></p>
                            <p>
                                <h3>Instructions Line</h3>
                            </p>
                            <table class="table table-bordered" style="border: 2px solid black;">
                                <tr style="border: 2px solid black;">
                                    <td style="width: 18%">
                                        <strong>Number</strong>
                                    </td>
                                    <td style="width: 8%">
                                        <strong>Date</strong>
                                    </td>
                                    <td style="width: 8%">
                                        <strong>User</strong>
                                    </td>
                                    <td style="width: 8%">
                                        <strong>Instructions</strong>
                                    </td>
                                    <td style="width: 10%">
                                        <strong>Status</strong>
                                    </td>
                                    <td style="width: 20%">
                                        <strong>Start Date</strong>
                                    </td>
                                    <td style="width: 20%">
                                        <strong>End Date</strong>
                                    </td>
                                    <td style="width: 20%">
                                        <strong>Notes</strong>
                                    </td>
                                </tr>
                                <t t-foreach="o.instruction_job_order_ids" t-as="instruction_job">
                                    <tr style="border: 2px solid black;">
                                        <td style="width: 18%">
                                            <span t-field="instruction_job.name"/>
                                        </td>
                                        <td style="width: 8%">
                                            <span t-field="instruction_job.pick_date" t-options='{"widget": "date","format": "MMMM dd, yyyy"}'/>
                                        </td>
                                        <td style="width: 8%">
                                            <span t-field="instruction_job.user_id"/>
                                        </td>
                                        <td style="width: 8%">
                                            <span t-field="instruction_job.description"/>
                                        </td>
                                        <td style="width: 10%">
                                            <span t-field="instruction_job.status"/>
                                        </td>
                                        <td style="width: 20%">
                                            <span t-field="instruction_job.start_date" t-options='{"widget": "datetime","format": "MMMM dd, yyyy hh:mm:ss"}'/>
                                        </td>
                                        <td style="width: 20%">
                                            <span t-field="instruction_job.end_date" t-options='{"widget": "datetime","format": "MMMM dd, yyyy hh:mm:ss"}'/>
                                        </td>
                                        <td style="width: 20%">
                                            <span t-field="instruction_job.note"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                            <p>
                                <h3>Material Requisition</h3>
                            </p>
                            <table class="table table-bordered" style="border: 2px solid black;">
                                <tr style="border: 2px solid black;">
                                    <td>
                                        <strong>Number</strong>
                                    </td>
                                    <td>
                                        <strong>Employee</strong>
                                    </td>
                                    <td>
                                        <strong>Departmnet</strong>
                                    </td>
                                    <td>
                                        <strong>Requisition Date</strong>
                                    </td>
                                    <td>
                                        <strong>Requisition Deadline</strong>
                                    </td>
                                    <td>
                                        <strong>Company</strong>
                                    </td>
                                    <td>
                                        <strong>State</strong>
                                    </td>
                                </tr>
                                <t t-foreach="o.material_requisition_ids" t-as="material_requisition">
                                    <tr style="border: 2px solid black;">
                                        <td>
                                            <span t-field="material_requisition.name"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition.employee_id"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition.department_id"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition.request_date" t-options='{"widget": "date","format": "MMMM dd, yyyy"}'/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition.date_end" t-options='{"widget": "date","format": "MMMM dd, yyyy"}'/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition.company_id"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                            <p>
                                <h3>Material Requisition Line</h3>
                            </p>
                            <table class="table table-bordered" style="border: 2px solid black;">
                                <tr style="border: 2px solid black;">
                                    <td>
                                        <strong>Requisition Action</strong>
                                    </td>
                                    <td>
                                        <strong>Product</strong>
                                    </td>
                                    <td>
                                        <strong>Description</strong>
                                    </td>
                                    <td>
                                        <strong>Quantity</strong>
                                    </td>
                                    <td>
                                        <strong>UOM</strong>
                                    </td>
                                    <td>
                                        <strong>Vendors</strong>
                                    </td>
                                </tr>
                                <t t-foreach="o.material_requisition_line_ids" t-as="material_requisition_line">
                                    <tr style="border: 2px solid black;">
                                        <td>
                                            <span t-field="material_requisition_line.requisition_type"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition_line.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition_line.description"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition_line.qty"/>
                                        </td>
                                        <td>
                                            <span t-field="material_requisition_line.uom"/>
                                        </td>
                                        <td>
                                            <t t-foreach="material_requisition_line.partner_id" t-as="line">
                                                <span t-field="line.name"/>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                            <p style="page-break-before:always;"></p>
                            <p>
                                <h3>Cost Sheet</h3>
                            </p>
                            <table class="table table-bordered" style="border: 2px solid black;">
                                <tr style="border: 2px solid black;">
                                    <td>
                                        <strong>Type</strong>
                                    </td>
                                    <td>
                                        <strong>Product</strong>
                                    </td>
                                    <td>
                                        <strong>Description</strong>
                                    </td>
                                    <td>
                                        <strong>Account</strong>
                                    </td>
                                    <td>
                                        <strong>Analytic Account</strong>
                                    </td>
                                    <td>
                                        <strong>Analytic Tags</strong>
                                    </td>
                                    <td>
                                        <strong>Qty</strong>
                                    </td>
                                    <td>
                                        <strong>Unit Price</strong>
                                    </td>
                                    <td>
                                        <strong>Discount</strong>
                                    </td>
                                    <td>
                                        <strong>Taxes</strong>
                                    </td>
                                    <td>
                                        <strong>Amount</strong>
                                    </td>
                                </tr>
                                <t t-foreach="o.job_cost_sheet_ids" t-as="cost_sheet">
                                    <tr style="border: 2px solid black;">
                                        <td>
                                            <span t-field="cost_sheet.cost_type"/>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.name"/>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.account_analytic_id"/>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.quantity"/>
                                            <span t-field="cost_sheet.uom_id"/>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.price_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.discount"/>
                                        </td>
                                        <td>
                                            <t t-foreach="cost_sheet.invoice_line_tax_ids" t-as="tax">
                                                <span t-field="tax.name"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="cost_sheet.price_subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="10" class="text-right">
                                        <strong>Untaxed Amount</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.cost_sheet_amount_untaxed"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="10" class="text-right">
                                        <strong>Taxed Amount</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.cost_sheet_amount_tax"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="10" class="text-right">
                                        <strong>Total</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.cost_sheet_amount_total"/>
                                    </td>
                                </tr>
                            </table>
                            <p style="page-break-before:always;"></p>
                            <p>
                                <h3>Job Invoice Line</h3>
                            </p>
                            <table class="table table-bordered" style="border: 2px solid black;">
                                <tr style="border: 2px solid black;">
                                    <td>
                                        <strong>Product</strong>
                                    </td>
                                    <td>
                                        <strong>Description</strong>
                                    </td>
                                    <td>
                                        <strong>Account</strong>
                                    </td>
                                    <td>
                                        <strong>Analytic Account</strong>
                                    </td>
                                    <td>
                                        <strong>Analytic Tags</strong>
                                    </td>
                                    <td>
                                        <strong>Is Invoice</strong>
                                    </td>
                                    <td>
                                        <strong>Invoice</strong>
                                    </td>
                                    <td>
                                        <strong>Qty</strong>
                                    </td>
                                    <td>
                                        <strong>Unit Price</strong>
                                    </td>
                                    <td>
                                        <strong>Discount</strong>
                                    </td>
                                    <td>
                                        <strong>Taxes</strong>
                                    </td>
                                    <td>
                                        <strong>Amount</strong>
                                    </td>
                                </tr>
                                <t t-foreach="o.job_invoice_line_ids" t-as="job_invoice_line">
                                    <tr style="border: 2px solid black;">
                                        <td>
                                            <span t-field="job_invoice_line.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.account_analytic_id"/>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.is_invoice"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.invoice_id"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.quantity"/>
                                            <span t-field="job_invoice_line.uom_id"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.price_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.discount"/>
                                        </td>
                                        <td>
                                            <t t-foreach="job_invoice_line.invoice_line_tax_ids" t-as="tax">
                                                <span t-field="tax.name"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="job_invoice_line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="11" class="text-right">
                                        <strong>Untaxed Amount</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.invoice_amount_untaxed"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="11" class="text-right">
                                        <strong>Taxed Amount</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.invoice_amount_tax"/>
