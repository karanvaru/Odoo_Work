                                        <td>
                                            <t t-foreach="daily_line.workers_ids" t-as="worker">
                                                <span t-field="worker.name"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-field="daily_line.note"/>
                                        </td>
                                        <td>
                                            <span t-field="daily_line.account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="daily_line.amount"/>
