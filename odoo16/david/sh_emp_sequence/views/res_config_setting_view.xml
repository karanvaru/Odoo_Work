<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_config_setting_view" model="ir.ui.view">
        <field name="name">hr.employee.config.setting.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']//div[1]" position="after">
                <h2>Auto Create Employee Sequence No. Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_auto_create" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_auto_create" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
