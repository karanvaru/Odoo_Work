<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form_inherit_finance_approval_so" model="ir.ui.view">
        <field name="name">res.company.form.view.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook[last()]" position="inside"> 
                <page string="Sales Tripple Approval Seting"> 
                    <group>
                        <group>
                            <field name="so_double_validation"/>
                            <field name="so_three_step_validation"/>
                            <field name="so_email_template_id" attrs="{'invisible':[('so_three_step_validation','=',False)]}"/>
                            <field name="so_refuse_template_id" attrs="{'invisible':[('so_three_step_validation','=',False)]}"/>
                        </group>
                        <group>
                            <field name="so_double_validation_amount" attrs="{'invisible':[('so_three_step_validation','=',False)]}"/>
                            <field name="so_finance_validation_amount" attrs="{'invisible':[('so_three_step_validation','=',False)]}"/>
                            <field name="so_director_validation_amount" attrs="{'invisible':[('so_three_step_validation','=',False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>