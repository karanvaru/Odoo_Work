<odoo>
<data>
	<record id="message_wizard_pop_up_form" model="ir.ui.view">
		<field name="name">message.wizard</field>
		<field name="model">message.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form >
				<separator colspan="6"/>
				<h3><field name="text" colspan="4" nolabel="1"/></h3>
				<newline/>
				<separator colspan="6"/>
				<footer>
					<button special="cancel" class="oe_highlight"  string="OK" />
				</footer>
			</form>
		</field>
    </record>	
</data>	
</odoo>
