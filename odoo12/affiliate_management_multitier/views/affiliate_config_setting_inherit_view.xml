<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model='ir.ui.view' id='view_affiliate_config_form_inherit'>
			<field name="name">affiliate.res.config.view</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="affiliate_management.view_affiliate_config_form" />
			<field name="arch"  type="xml">
        <xpath expr="//div[@id='affiliate_program_email']"  position="after">
		<h2> Affiliate Program Benefits</h2>
        <div class="row mt16 o_settings_container" id="affiliate_program_benifit" title="Configure your Affiliate Program Benefits">
		  <div class="col-xs-12 col-md-6 o_setting_box">
		  	<div class="o_setting_right_pane">
				
              <label string="Benefit Text" for="benefit_text"/>
                       
            
				<div class="text-muted">
                        Write your benfit text here
                </div>
				<br/>
			
				<field name="benefit_text" style="width:800px;"/>
				 
			</div>
			
		  </div>
			
		</div>
        </xpath>
			</field>
		</record>


	</data>
</odoo>
