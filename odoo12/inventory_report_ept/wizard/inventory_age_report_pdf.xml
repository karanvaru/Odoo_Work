										<th class="text-center">
											<t t-esc="o.env['res.company'].browse(int(inv_data)).name" />
										</th>
									</table>
									<table class="table table-bordered text-center"
										style="table-layout:auto" height="30pt">
										<thead>
											<tr style="background-color:#DDDCDC">
												<th>
													<h6>
														<b>Odoo SKU</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Product Name</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Total Quantity</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Qty(% of overall inventory)</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Qty(oldest)</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Days old(oldest)</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Value</b>
													</h6>
												</th>
												<th>
													<h6>
														<b>Value(% of overall inventory)</b>
													</h6>
												</th>
