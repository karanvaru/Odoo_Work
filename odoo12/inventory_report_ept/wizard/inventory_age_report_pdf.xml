												<!-- <b>Current sale price</b> -->
												<!-- </h6> -->
												<!-- </th> -->
											</tr>
										</thead>
										<tbody>
											<tr t-foreach="datas[inv_data]" t-as="line">
												<td>
													<t t-esc="line['default_code']" />
												</td>
												<td>
													<t t-esc="line['name']" />
												</td>
												<td>
													<t t-esc="line['product_qty']" />
												</td>
												<td>
