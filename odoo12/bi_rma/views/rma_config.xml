<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>


        <record id="res_config_settings_view_form_rma" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.rma</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <div id="business_documents" position="after">
                    <h2>RMA Configuration</h2>
                    <div class="row mt16 o_settings_container" id="global_commission_settings">  
                        <div class="col-12 col-lg-6 o_setting_box">

                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <label for="b2b_source_picking_type_id"/>
                                    <div class="mt16">
                                        <field name="b2b_source_picking_type_id" class="o_light_label"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <label for="b2b_destination_picking_type_id"/>
                                    <div class="mt16">
                                        <field name="b2b_destination_picking_type_id" class="o_light_label" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
										  
	</data>
</odoo>