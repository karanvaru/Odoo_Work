<odoo>
    <data>
        <!-- Inherit CRM Lead -->
        <record model="ir.ui.view" id="crm_case_form_view_leads_prospect_iherit1">
            <field name="name">crm.lead.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[1]" position="after">
                        <page name="lead_age_audit" string="Lead Age Audit">
                            <field name="age_audit" readonly="1">
                                <tree>
                                    <field name="stage_id"/>
                                    <field name="date_in"/>
                                    <field name="date_out"/>
                                    <field name="days"/>
                                </tree>
                                <form>
                                    <group colspan="2" col="4">
                                        <field name="stage_id"/>
                                        <field name="date_in"/>
                                        <field name="date_out"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Inherit CRM Stage -->
        <record model="ir.ui.view" id="inherit_view_crm_lead_stage">
            <field name="name">crm.stage.inherit</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='probability']" position="after">
                        <field name="check"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>