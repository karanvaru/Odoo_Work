        <record id="employee_work_location_view_form" model="ir.ui.view">
            <field name="name">Work Location</field>
            <field name="model">work.location</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="location"/>
