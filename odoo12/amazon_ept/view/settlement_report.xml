<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="seq_import_settlement_report_job" model="ir.sequence">
            <field name="name">import_settlement_report</field>
            <field name="code">import_settlement_report</field>
            <field name="padding">5</field>
            <field name="prefix">STR</field>
            <field name="company_id" eval="False"/>
        </record>


    </data>

    <data>
        <record id="amazon_settlement_report_search_view_ept"
                model="ir.ui.view">
            <field name="name">Amazon Settlement Report Search</field>
            <field name="model">settlement.report.ept</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Settlement Report">
                    <field name="name"/>
                    <field name="report_request_id"/>
                    <field name="report_id"/>
                    <field name="report_type" invisible="1"/>
                    <field name="state"/>
                    <field name="seller_id"/>
                    <group expand="0" string="Group By...">
                        <filter name="instance" string="Instance" context="{'group_by':'instance_id'}"/>
                        <filter name="seller" string="Seller" context="{'group_by':'seller_id'}"/>
                        <filter name="status" string="Status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="amazon_settlement_report_tree_view_ept" model="ir.ui.view">
            <field name="name">Amazon Settlement Report Tree</field>
            <field name="model">settlement.report.ept</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Report Return Request" create="false" decoration-muted="state=='_SUBMITTED_'"
                      decoration-success="state == 'closed'"
                      decoration-info="state in ('_DONE_','processed','partially_processed','imported')"
                      decoration-danger="state == '_CANCELLED_'">
                    <field name="name"/>
                    <field name="requested_date"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="instance_id"/>
                    <field name="seller_id"/>
                    <field name="state"/>
                    <field name="attachment_id" invisible="1"/>
                    <button name="download_report" type="object" help="Click Here To download report"
                            icon="fa-cloud-download" aria-label="Download Report" title="Download Report"
                            attrs="{'invisible':[('attachment_id','=',False)]}"/>
                </tree>
            </field>
        </record>
        <record id="amazon_settlement_report_form_view_ept"
                model="ir.ui.view">
            <field name="name">Amazon Settlement Report Form</field>
            <field name="model">settlement.report.ept</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Settlement Report" create="false">
                    <header>
                        <button name="get_report" string="Get Report"
                                attrs="{'invisible':['|',('report_id','=',False),('attachment_id','!=',False)]}"
                                class="oe_highlight"
                                type="object"/>
                        <button name="download_report" string="Download Report"
                                attrs="{'invisible':[('attachment_id','=',False)]}"
                                class="oe_highlight"
                                type="object"/>
                        <button name="view_bank_statement" string="View Statement"
                                attrs="{'invisible':[('statement_id','=',False)]}"
                                class="oe_highlight"
                                type="object"/>
                        <button name="reconcile_remaining_transactions" string="Reconcile"
                                attrs="{'invisible':['|',('state','not in',['imported','partially_processed']),('is_processed','!=',False)]}"
                                class="oe_highlight"
                                type="object"
                        />
                        <button name="process_settlement_report_file" string="Process Statement"
                                attrs="{'invisible':['|',('attachment_id','=',False),('state','!=','_DONE_')]}"
                                class="oe_highlight"
                                help="Click Here To process the report file"
                                type="object"/>

                        <button string="Configure Missing Fees"
                                name="configure_statement_missing_fees"
                                attrs="{'invisible':['|',('is_fees','!=',True),('statement_id','=',False)]}"
                                type="object"
                                class="oe_highlight"/>

                        <button name="closed_statement" string="Closed Statement"
                                attrs="{'invisible':['|',('is_processed','=',False),('state','=','closed')]}"
                                class="oe_highlight"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="_SUBMITTED_,_IN_PROGRESS_,_DONE_"/>
                    </header>
                    <sheet>
                        <div class="oe_title" style="width:500px;">
                            <h1>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" style="width: 400px;"
                             name="buttons">
                            <button class="oe_inline oe_stat_button" name="list_of_reimbursement_invoices"
                                    style="width: 400px;"
                                    type="object" icon="fa-pencil-square-o"
                                    attrs="{'invisible': [('state', 'not in',['processed','partially_processed','closed'])]}">
                                <field string="Reimbursement
								Invoices" name="invoice_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="seller_id" required="1"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>            <!-- on_change="on_change_seller_id(seller_id,start_date,end_date)" -->
                                <field name="instance_id"
                                       attrs="{'invisible':[('state','not in',['_DONE_','processed'])]}"
                                       domain="[('seller_id','=',seller_id)]"/> <!-- attrs="{'invisible':[('state','not in',['_DONE_','processed'])]}" -->
                                <field name="currency_id"
                                       attrs="{'invisible':[('state','not in',['_DONE_','processed'])]}"/>
                            </group>
                            <group>
                                <label for="start_date" string="Date"/>
                                <div>
                                    <field name="start_date" attrs="{'readonly':[('state','!=','draft')]}"
                                           class="oe_inline"/>
                                    to
                                    <field name="end_date" attrs="{'readonly':[('state','!=','draft')]}"
                                           class="oe_inline"/>
                                </div>
                                <field name="report_id" readonly="1"/>
                                <field name="report_request_id" readonly="1"/>
                                <field name="report_type" readonly="1" invisible="1"/>
                                <field name="attachment_id" invisible="1"/>
                                <field name="statement_id" invisible="1"/>
                                <field name="user_id" readonly="1" invisible="1"/>
                                <field name="is_processed" invisible="1"/>
                                <field name="is_already_processed" readonly="1"
                                       attrs="{'invisible':[('is_already_processed','=',False)]}"/>
                                <field name="already_processed_report_id" readonly="1"
                                       attrs="{'invisible':[('is_already_processed','=',False)]}"/>
                                <field name="is_fees" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_amazon_settlement_report_ept" model="ir.actions.act_window">
            <field name="name">Amazon Settlement Reports</field>
            <field name="res_model">settlement.report.ept</field>
            <field name="view_type">form</field>
            <!-- action domain added by Dhruvi [to view only XML file] -->
            <field name="domain">[('report_type','in',['_GET_V2_SETTLEMENT_REPORT_DATA_XML_','_GET_V2_SETTLEMENT_REPORT_DATA_FLAT_FILE_V2_'])]</field>
            <field name="view_id" ref="amazon_settlement_report_tree_view_ept"/>
        </record>

        <menuitem id="menu_amazon_main_report_ept" name="Reports"
                  parent="amazon_ept.menu_item_parent_amazon_sales_ept" groups="amazon_ept.group_amazon_manager_ept"
                  sequence="18"/>

        <menuitem id="menu_amazon_settlement_report_ept" name="Settlement Statements"
                  parent="amazon_ept.menu_item_parent_amazon_invoices_ept"
                  groups="account.group_account_user,amazon_ept.group_amazon_manager_ept"
                  action="action_amazon_settlement_report_ept" sequence="18"/>

    </data>
		<menuitem id="menu_amazon_main_report_ept" name="Reports"
			parent="amazon_ept.menu_item_parent_amazon_sales_ept" groups="amazon_ept.group_amazon_manager_ept"
			sequence="18" />
			
		<menuitem id="menu_amazon_settlement_report_ept" name="Settlement Statements"
			parent="amazon_ept.menu_item_parent_amazon_invoices_ept"
			groups="account.group_account_user,amazon_ept.group_amazon_manager_ept" 
			action="action_amazon_settlement_report_ept" sequence="18"/>
</odoo>
