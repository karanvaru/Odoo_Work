<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">

        <record id="seq_import_customer_return_report_job" model="ir.sequence">
            <field name="name">import_customer_return_report</field>
            <field name="code">import_customer_return_report</field>
            <field name="padding">5</field>
            <field name="prefix">RET</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
    <data>
        <record id="amazon_customer_return_report_request_search_view_ept"
                model="ir.ui.view">
            <field name="name">Amazon Customer Return Report Search</field>
            <field name="model">sale.order.return.report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Report Return Request">
                    <field name="name"/>
                    <field name="report_request_id"/>
                    <field name="report_id"/>
                    <field name="report_type"/>
                    <field name="state"/>
                    <field name="seller_id" options="{'no_create':True,'no_create_edit': True}"/>
                    <group expand="0" string="Group By...">
                        <filter name="seller" string="Seller" context="{'group_by':'seller_id'}"/>
                        <filter name="status" string="Status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="amazon_return_report_request_tree_view_ept" model="ir.ui.view">
            <field name="name">Amazon Return Report Request Tree</field>
            <field name="model">sale.order.return.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Report Return Request"
                      colors="red:state=='_CANCELLED_'; orange:state=='_SUBMITTED_'; blue:state=='_DONE_'; green:state=='processed'"
                      create="false">
                    <field name="name"/>
                    <field name="requested_date"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="seller_id"/>
                    <field name="state"/>
                    <field name="attachment_id" invisible="1"/>
                    <button name="download_report" type="object" help="Click Here To download report"
                            icon="fa-cloud-download fa-lg" aria-label="Download Report" title="Download Report"
                            attrs="{'invisible':[('attachment_id','=',False)]}"/>
                </tree>
            </field>
        </record>
        <record id="amazon_return_report_request_form_view_ept"
                model="ir.ui.view">
            <field name="name">Amazon Return Report History Form</field>
            <field name="model">sale.order.return.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Return Request History" create="false">
                    <header>
                        <button name="request_report" string="Request Report"
                                states="draft"
                                class="oe_highlight"
                                type="object"/>

                        <button name="get_report_request_list" string="Check Status"
                                states="_SUBMITTED_,_IN_PROGRESS_"
                                class="oe_highlight"
                                type="object"/>
                        <button name="get_report" string="Get Report"
                                attrs="{'invisible':['|',('report_id','=',False),('attachment_id','!=',False)]}"
                                class="oe_highlight"
                                type="object"/>
                        <button name="download_report" string="Download Report"
                                attrs="{'invisible':[('attachment_id','=',False)]}"
                                class="oe_highlight"
                                type="object"/>
                        <button name="process_return_report_file" string="Process File"
                                attrs="{'invisible':['|',('attachment_id','=',False),('state','!=','_DONE_')]}"
                                class="oe_highlight"
                                help="Click Here To process the report file"
                                type="object"/>
                        <button name="re_process_return_report_file" string="Reprocess File"
                                attrs="{'invisible':['|',('attachment_id','=',False),('state','!=','processed')]}"
                                class="oe_highlight"
                                help="Click Here To process the report file"
                                type="object"/>

                        <button name="list_of_logs" string="Mismatch Details"
                                attrs="{'invisible':[('log_count','=',0)]}"
                                class="oe_highlight"
                                help="Click Here To Check Logs"
                                type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="_SUBMITTED_,_IN_PROGRESS_,_DONE_"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" style="width: 300px;"
                             name="buttons">
                            <button class="oe_inline oe_stat_button" name="list_of_return_orders"
                                    type="object" icon="fa-truck" attrs="{'invisible': [('state', '!=', 'processed')]}">
                                <field string="Customer Returns" name="return_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title" style="width: 500px;">
                            <h1>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="seller_id" required="1"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <label for="start_date" string="Date"/>
                                <div>
                                    <field name="start_date" attrs="{'readonly':[('state','!=','draft')]}"
                                           class="oe_inline"/>
                                    to
                                    <field name="end_date" attrs="{'readonly':[('state','!=','draft')]}"
                                           class="oe_inline"/>
                                </div>
                                <field name="report_id" readonly="1"/>
                                <field name="report_request_id" readonly="1"/>
                                <field name="user_id" readonly="1" invisible="1"/>
                                <field name="attachment_id" invisible="1"/>
                                <field name="report_type" readonly="1" invisible="1"/>
                                <field name="log_count" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_amazon_return_report_request_history_ept" model="ir.actions.act_window">
            <field name="name">Amazon Return Reports</field>
            <field name="res_model">sale.order.return.report</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="amazon_return_report_request_tree_view_ept"/>
        </record>

        <!-- Orders & Returns: Child Menu Customer Returns -->
        <menuitem id="menu_amazon_return_report_request_history_ept" name="Customer Returns"
                  parent="amazon_ept.amazon_fba_child_orders_and_returns_menu"
                  action="action_amazon_return_report_request_history_ept"/>
    </data>
</odoo>
