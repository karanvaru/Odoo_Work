<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="hower_message.AccountReportLineCustomizable_custom"
       t-inherit="account_reports.AccountReportLineCustomizable" t-inherit-mode="extension">
        <xpath expr="//tr[@data-id='line']" position="after">
            <div class="custom-popup-container">
                <div class="custom_class_based_on_level"
                     t-on-mouseenter="onMouseEnter"
                     t-on-mouseleave="onMouseLeave">
                     Hover over me
                    <div class="popup">
                        <canvas t-ref="canvas" class="w-100"/>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>




