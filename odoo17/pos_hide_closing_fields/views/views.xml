<odoo>
  <data>
      <record id="res_config_settings_view_form_inherit_hide_info" model="ir.ui.view">
            <field name="name">res.config.setting.form.inherit.hide.info</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name='show_closing_financial_fields'/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_closing_financial_fields"/>
                            <div class="text-muted">
                               Access To POS Session Closing Financial Data
                            </div>
                        </div>
                    </div>
                </xpath>
        </field>
      </record>
  </data>
</odoo>
