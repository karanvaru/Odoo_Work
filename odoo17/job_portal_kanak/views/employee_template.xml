                                            <h4 class="title">New Job Details</h4>
                                        </div>
                                    </div>
                                    <form action="/add/jobs" method="post" class="add_job_form_cl">
                                        <div class="alert alert-danger" role="alert" t-if="error">
                                            <t t-esc="error" />
                                        </div>
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                        <input type="hidden" name="submitted" value="1" />
                                        <div class="row">
                                            <div class="offset-md-3 col-md-6">
                                                <div class="form-group">
                                                    <input type="text" name="name" class="form-control" placeholder="Job Title *" required="required" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="offset-md-3 col-md-6">
                                                <div class="form-group">
                                                    <textarea type="text" name="description" class="form-control" placeholder="Description *" required="required" />
                                                    </div>
											</div>
										</div>
										<div class="row">
								  	 		<div class="offset-md-3 col-md-6">
