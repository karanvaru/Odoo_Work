													     	<option t-att-value="areas_id.id"><t t-esc="areas_id.name"/></option>
													     </t>
												    </select>
												</div>
											</div>
										</div>
										<div class="row">
								  	 		<div class="offset-md-3 col-md-6">
												<div class="form-group">
													<input type="text" name="no_of_recruitment" class="form-control" placeholder="No of Recruitment" pattern="^[0-9]*$"/>
												</div>
											</div>
										</div>
										<div class="row">
								  	 		<div class="offset-md-3 col-md-6">
												<div class="form-group">
													<div class="input-group date" data-provide="datepicker">
