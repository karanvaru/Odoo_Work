<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- Template for E-mail already exists  -->

        <template id="existing_contact_E_mail_message">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title sora-font" style="color: red;">Contact with the same E-mail already
                                        Exists...
                                    </h4>
                                    <center>
                                        <button onclick="window.location.href='http://testerp.gibgi.com/'"
                                                class="btn btn-primary custom-btns">Home
                                        </button>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Template for Phone already exists  -->

        <template id="existing_contact_Phone_message">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title sora-font" style="color: red;">Contact with the same Mobile already
                                        Exists...
                                    </h4>
                                    <center>
                                        <button onclick="window.location.href='http://testerp.gibgi.com/'"
                                                class="btn btn-primary custom-btns">Home
                                        </button>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Template for both mail and mobile already exists  -->

        <template id="existing_contact_both_mail_and_phone_message">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title sora-font" style="color: red;">Contact with this email and mobile
                                        already exists...
                                    </h4>
                                    <center>
                                        <button onclick="window.location.href='http://testerp.gibgi.com/'"
                                                class="btn btn-primary custom-btns">Home
                                        </button>
                                    </center>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Template for Registration sucessfull  -->

<template id="vendor_registration_success">
    <t t-call="website.layout">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title registration-success-title" style="color: #3A9E3E;">Registration Successful!</h4>
                            <p class="registration-success-message">Your vendor registration was successful. Thank you for choosing our platform.</p>
                            <p class="registration-success-message">Your reference ID is: <strong t-esc="id"/>. Please keep this ID for future reference.</p>
                            <center><button onclick="window.location.href='http://testerp.gibgi.com/'" class="btn btn-primary custom-btns">Home</button></center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
    </data>
</odoo>
