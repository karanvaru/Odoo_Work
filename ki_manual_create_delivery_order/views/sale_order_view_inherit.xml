<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_inherit_form_view" model="ir.ui.view">
        <field name="name">sale.order.inherit.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button type="object"
                        name="action_delivery_order"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('delivery_order_count', '=', 0)]}"
                >
                    <field name="delivery_order_count" widget="statinfo" string="Delivery"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>